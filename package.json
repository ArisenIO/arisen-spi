{
  "name": "@arisensdk/signature-provider-interface",
  "version": "1.0.0",
  "description": "ARISEN's Signature Provider Interface",
  "author": {
    "name": "arisen",
    "url": "https://arisen.network"
  },
  "contributors": [
    "shikhar"
  ],
  "license": "MIT",
  "homepage": "https://github.com/ARISENIO/arisen-signature-provider-interface#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ARISENIO/arisen-signature-provider-interface.git"
  },
  "bugs": {
    "url": "https://github.com/ARISENIO/arisen-signature-provider-interface/issues"
  },
  "keywords": [
    "signature",
    "provider",
    "interface",
    "bridge",
    "rix",
    "arisen",
    "arisenjsv1"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn lint && tsc -p ./tsconfig.json",
    "clean-build": "rm -rf dist && yarn build",
    "test": "jest",
    "lint": "tslint \"src/**/*.ts{,?}\"",
    "prepublish": "yarn clean-build"
  },
  "dependencies": {
    "arisensdk": "1.0.3",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@blockone/tslint-config-blockone": "^4.0.1",
    "@types/jest": "^24.0.13",
    "@types/node": "^10.12.12",
    "@types/uuid": "^3.4.4",
    "jest": "^24.9.0",
    "ts-jest": "^24.0.2",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "typescript": "^3.4.5"
  },
  "jest": {
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "collectCoverageFrom": [
      "src/**"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "text-summary"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageThreshold": {}
  }
}
